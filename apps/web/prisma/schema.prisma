generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum AttributeType {
  TEXT
  NUMBER
  DATE
  CHECKBOX
  SELECT
  MULTISELECT
  URL
  EMAIL
  PHONE
  TAGS
  FILE
  SOCIAL
}

model Profile {
  id            String         @id @db.Uuid
  createdAt     DateTime       @default(now())
  updatedAt     DateTime?      @updatedAt
  firstName     String?
  lastName      String?
  avatar        String?
  organizations Organization[]
}

model Organization {
  id         Int         @id @default(autoincrement())
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  deletedAt  DateTime?
  slug       String      @unique
  name       String
  logo       String?
  members    Profile[]
  contacts   Contact[]
  lists      List[]
  attributes Attribute[]
  companies  Company[]
}

model Attribute {
  id             Int           @id @default(autoincrement())
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  system         Boolean       @default(false) // system attributes are not removable by the user
  internalSlug   String?
  required       Boolean       @default(false)
  type           AttributeType @default(TEXT)
  label          String
  config         Json? // { "options": ["option1", "option2"] }
  icon           String?
  description    String?
  organization   Organization  @relation(fields: [organizationId], references: [id])
  organizationId Int
}

model Contact {
  id             Int          @id @default(autoincrement())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  deletedAt      DateTime?
  attributes     Json // { "[attributeId]": "[attributeValue]" }
  lists          List[]
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId Int
  externalId     String       @unique @default(uuid()) // e.g. for the url path, so we don't expose the internal db id
  companies      Company[]
}

model List {
  id             Int          @id @default(autoincrement())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  deletedAt      DateTime?
  name           String
  slug           String       @unique
  description    String?
  icon           String?
  contacts       Contact[]
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId Int
}

model Company {
  id             Int          @id @default(autoincrement())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  deletedAt      DateTime?
  name           String
  slug           String       @unique
  description    String?
  icon           String?
  employees      Contact[]
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId Int
}

model Waitlist {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  doubleOptIn      Boolean   @default(false)
  confirmationCode String    @unique
  confirmedAt      DateTime?
  createdAt        DateTime  @default(now())
  referrer         Waitlist? @relation("Referrer", fields: [referrerId], references: [id])
  referrerId       Int?      @unique
  referralCode     String    @unique
  waitlist         Waitlist? @relation("Referrer")
}
